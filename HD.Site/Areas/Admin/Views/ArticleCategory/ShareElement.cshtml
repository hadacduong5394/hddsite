@using HD.Domain.Models
@model ArcticleCategory
@{ 
    var lstParent = ViewData["Parents"] as List<ArcticleCategory>;
}

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 col-xs-12 control-label">
            Danh mục gốc
        </label>
        <div class="col-sm-9 col-xs-12">
            @Html.DropDownList("ParentId", new SelectList(lstParent, "Id", "CatName", Model.ParentId), "--Danh mục cha--", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 col-xs-12 control-label">
            Tên danh mục(<span style="color:red;">*</span>)
        </label>
        <div class="col-sm-9 col-xs-12">
            <input type="text" name="CatName" value="@Model.CatName" class="form-control" required/>
        </div>
    </div>
</div>
