@{
    Layout = null;
}
@using HD.Site.Models
@using BotDetect.Web.Mvc;
@model LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HD | Đăng nhập quản trị</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="/Scripts/plugins/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Scripts/plugins/css/toastr.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="/Scripts/plugins/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="/Scripts/plugins/css/blue.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>HD</b>site</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">-- ĐĂNG NHẬP QUẢN TRỊ --</p>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" required placeholder="Tên đăng nhập" name="UserName" value="@Model.UserName">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" required placeholder="Mật khẩu" name="Password" value="@Model.Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row" style="padding-left: 15%; padding-bottom: 5%;">
                    @Html.Captcha(Model.LoginCaptCha)
                    @Html.TextBox("CaptchaCode")

                    <p style="color: red;">@Html.ValidationSummary(false, "", new { @class="text-danger" })</p>
                    @if (ViewData["ErrorLogin"] != null)
                    {
                        <p style="color: red;">@ViewData["ErrorLogin"]</p>
                    }
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng Nhập</button>
                    </div>
                    <div class="col-xs-5 pull-right" style="padding-top: 3%;">
                        <a href="/Account/LostPassword">Quên mật khẩu</a>
                    </div>
                    <!-- /.col -->
                </div>
            }
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="/Scripts/plugins/js/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="/Scripts/plugins/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/Scripts/plugins/js/icheck.min.js"></script>
    <script src="/Scripts/plugins/js/toastr.min.js"></script>
    <script src="/Scripts/plugins/js/toastrServiceSetting.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>

    @if (TempData["toastrType"] != null && TempData["toastrMessage"] != null)
    {
        <script>
            var type = '@TempData["toastrType"]';
            var message = '@TempData["toastrMessage"]';
            if (type === 'success') {
                toastr.success(message);
                $.ajax({
                    url: "/Base/ClearAlert",
                    type: "post",
                    dataType: "json"
                });
            }

            if (type === 'info') {
                toastr.info(message);
                $.ajax({
                    url: "/Base/ClearAlert",
                    type: "post",
                    dataType: "json"
                });
            }

            if (type === 'warning') {
                toastr.warning(message);
                $.ajax({
                    url: "/Base/ClearAlert",
                    type: "post",
                    dataType: "json"
                });
            }

            if (type === 'error') {
                toastr.error(message);
                $.ajax({
                    url: "/Base/ClearAlert",
                    type: "post",
                    dataType: "json"
                });
            }
        </script>
    }
</body>
</html>
