@{
    ViewBag.Title = "Cập nhật người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using HD.Site.Models
@model UserModelDetail
@section JsFooter{
    <script>
        function funcCancel() {
            location.href = "/User/Index";
        }
    </script>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Thông tin người dùng</h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <form method="post" action="/User/Update" class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(Model => Model.User.Id)
            @Html.HiddenFor(Model => Model.User.CreateBy)
            @Html.HiddenFor(Model => Model.User.CreateDate)
            @Html.HiddenFor(Model => Model.User.UpdateBy)
            @Html.HiddenFor(Model => Model.User.UpdateDate)
            @Html.HiddenFor(Model => Model.User.PasswordHash)
            @Html.HiddenFor(Model => Model.User.Group)
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Tên đăng nhập(<span style="color:red;">*</span>)
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(Model => Model.User.UserName, new { @required = "required", @class = "form-control", Maxlength = "128", MinLength = "6", @placeholder = "Ít nhất 6 kí tự", @readonly= "readonly" })
                </div>
            </div>
            @Html.Partial("ShareElement", Model)
            <!-- /.box-body -->
            <div class="box-footer">
                <a href="/User/Index" class="btn btn-sm btn-default"><i class="fa fa-fw fa-backward"></i> Quay lại</a>
                <button type="submit" class="btn btn-sm btn-success pull-right"><i class="fa fa-fw fa-save"></i> Lưu</button>
            </div>
            <!-- /.box-footer-->
        </form>
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
